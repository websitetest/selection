<UserControl x:Class="MyApp.View.InstallPlanDrawingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	
	<Canvas x:Name="drawCanvas"
			MouseDown="drawCanvas_MouseDown"
			MouseUp="drawCanvas_MouseUp"
			MouseMove="drawCanvas_MouseMove"
			Background="DarkGray">
		<Image x:Name="bgImage" HorizontalAlignment="Center" VerticalAlignment="Center"
			   Source="{Binding Image}" 
			   MinWidth="200" MinHeight="200" />
	</Canvas>
</UserControl>
